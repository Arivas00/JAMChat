<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <img style='width:400px;height:400px;' src="/images/jamchat_transparent.png" />
            <h1>Create an account for JamChat</h1>
            <form class="form signup-form">
                <div class="form-group">
                    <label for="user-signup"></label>
                    <input class="form-input" type="text" id="user-signup" placeholder="Username" />
                </div>
                <div class="form-group">
                    <label for="password-signup"></label>
                    <input class="form-input" type="password" id="password-signup" placeholder="Password" />
                </div>
                <div class="form-group">
                    <label for="bio"></label>
                    <textarea class="form-input" type="text" id="bio" placeholder="Enter Short Bio"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn" type="submit">Sign-up</button>
                </div>
            </form>
        </div>
    </div>

    </body>

    <script src="/js/create.js"></script>